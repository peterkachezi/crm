@model IEnumerable<CustomerManager.DTO.CustomerModule.CustomerDTO>
@{
    ViewBag.Title = "Index";
}
<link href="~/css/style.css" rel="stylesheet" />

<div class="x_panel shadow p-3  rounded" style="height: 5rem; background-color: #2a3f54;">

    <div class="col-md-10 my-auto">
        <h4 class="top-banner-header" style="color: #fff;">
            Customers
        </h4>
        <p class="text-primary">
            <span>Home</span> <span> <i class="fa fa-angle-double-right"></i> </span>  <span style="color: #fff;">Customers</span>
        </p>
    </div>
    <div class="col-md-2 my-auto">
        <div class="col-md-12 text-center text-bold">
            <a class="pull-right" href="#" data-toggle="modal" data-target="#ModalCreateCustomer" data-backdrop="static" data-keyboard="false">
                <span class="m-0 p-0 top-banner-add"><i class="fa fa-2x fa-plus-circle" aria-hidden="true"></i></span>
                <h6 class="top-banner-add" style="color: #fff;">Add Customer</h6>
            </a>
        </div>
    </div>
</div>


<div class="x_panel shadow p-3 mb-5 bg-white rounded">
    <div class="x_title">
        <div class="row">
            <div class="col-md-4">
                <h6 class="Header"><i class="fa fa-building"></i>List of Customers</h6>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">

        <div class="row">
            <div class="col-sm-12">
                <div class="card-box table-responsive">
                    <table id="tblCustomer" class="table table-striped table-bordered dt-responsive nowrap table-sm">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Full Name</th>
                                <th scope="col">Phone Number</th>
                                <th scope="col">Email Address</th>
                                <th scope="col">Designation</th>
                                <th scope="col">Company</th>
              @*                  <th scope="col">City</th>
                                <th scope="col">College Name</th>*@
                                <th scope="col">State</th>
                                <th scope="col">Source</th>
                                <th scope="col">Create Date</th>
                                <th scope="col">Status</th>
         
                                <th scope="col">Options</th>
                            </tr>
                        </thead>
                        <tbody id="tblFilterCustomer">

                            @if (Model != null && Model.Count() > 0)
                            {
                                int count = 1;
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.FullName</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.EmailAddress</td>
                                        <td>@item.Designation</td>
                                        <td>@item.Company</td>
                                     @*   <td>@item.City</td>
                                        <td>@item.CollegeName</td>*@
                                        <td>@item.State</td>
                                        <td>@item.Source</td>
                                                                                <td>@item.CreatedDate.ToShortDateString()</td>

                                        <td>
                                            @{
                                                var Maklstatus = item.IsActive;

                                                if (Maklstatus == 0)
                                                {
                                                    <span class="pending">No</span>
                                                }

                                                if (Maklstatus == 1)
                                                {
                                                    <span class="approved">Yes</span>
                                                }

                                            }
                                        </td>


                                        <td>
                                            <a class=" btn-success  btn-sm" href="#" onclick="GetCustomer('@item.CustomerID')" value=""><i class="fa fa-edit"> Edit</i></a>


                                            <a class=" btn-danger  btn-sm" href="#" onclick="DeleteRecord('@item.CustomerID')" value=""><i class="fa fa-trash"> Delete</i></a>

                                        </td>
                                    </tr>

                                    count++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalCreateCustomer" tabindex="-1" role="dialog" aria-labelledby="ModalCreateCustomer" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title Header" id="ModalCreateCustomer">Add Customer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="frmAddCustomers">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">First Name</label>
                            <input type="text" class="form-control myinputs" id="txtFirstName" name="FirstName" aria-describedby="emailHelp">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Last Name</label>
                            <input type="text" class="form-control myinputs" id="txtLastName" name="LastName" aria-describedby="emailHelp">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Phone Number</label>
                            <input type="text" class="form-control myinputs numericOnly" id="txtPhoneNumber" name="PhoneNumber" aria-describedby="emailHelp">
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email Address</label>
                            <input type="text" class="form-control myinputs " id="txtEmailAddress" name="EmailAddress" aria-describedby="emailHelp">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Designation</label>
                            <input type="text" class="form-control myinputs " id="txtDesignation" name="Designation" aria-describedby="emailHelp">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Company</label>
                            <input type="text" class="form-control myinputs " id="txtCompany" name="Company" aria-describedby="emailHelp">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">City</label>
                            <input type="text" class="form-control myinputs " id="txtCity" name="City" aria-describedby="emailHelp">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">College Name</label>
                            <input type="text" class="form-control myinputs " id="txtCollegeName" name="CollegeName" aria-describedby="emailHelp">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">State</label>
                            <input type="text" class="form-control myinputs " id="txtState" name="State" aria-describedby="emailHelp">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Source</label>
                            <input type="text" class="form-control myinputs " id="txtSource" name="Source" aria-describedby="emailHelp">
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Status</label>
                            <select class="form-control myinputs" name="IsActive" id="txtIsActive">
                                <option value="" selected disabled hidden>Select Here</option>
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                        </div>
                    </div>


                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" id="btnSubmit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</div>

